<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4424b"
    tools:context="whaitua.penman.project.ames.ac.nz.badmemes.Mymemes">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:src="@drawable/mymemes" />

    <ImageView
        android:id="@+id/starBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/star1" />

    <ImageView
        android:id="@+id/homeBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="home icon"
        android:src="@drawable/home" />

    <ImageView
        android:id="@+id/listBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="list icon"
        android:src="@drawable/list" />

    <ImageView
        android:id="@+id/mymemesBtn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:contentDescription="meme icon"
        android:src="@drawable/memesprofile"
        android:text="My memes" />

    <ImageView
        android:id="@+id/myfaveBtn"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/mymemesBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:src="@drawable/favsicon"
        android:text="Favourites" />

</RelativeLayout>
