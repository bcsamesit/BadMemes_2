<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4424b"
    tools:context="whaitua.penman.project.ames.ac.nz.badmemes.Catagories">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:contentDescription="category icon"
        android:src="@drawable/cataicon" />

    <Button
        android:id="@+id/CataGame"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/gamesbtn"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/CataAnime" />

    <Button
        android:id="@+id/CataAnime"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_below="@+id/CataGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/animebtn" />

    <Button
        android:id="@+id/CataPolitics"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_below="@id/CataAnime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/politcsbtn" />

    <Button
        android:id="@+id/CataEdgy"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_below="@+id/CataPolitics"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edgybtn"/>

    <ImageView
        android:id="@+id/starBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:contentDescription="favorite"
        android:src="@drawable/star1" />

    <ImageView
        android:id="@+id/homeBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="home icon"
        android:src="@drawable/home" />

    <ImageView
        android:id="@+id/listBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="List icon"
        android:src="@drawable/list" />
</RelativeLayout>

